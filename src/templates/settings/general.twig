{% requirePermission 'navie:settings' %}

{% extends 'navie/settings/_layout' %}
{% import '_includes/forms' as forms %}

{% set selectedSubnavItem = 'general' %}

{% block content %}
    <form method="post" accept-charset="UTF-8" data-saveshortcut>
        <input type="hidden" name="action" value="navie/settings/save-general">
        <input type="hidden" name="pluginHandle" value="navie">
        {{ csrfInput() }}

        {{ forms.textField({
            first: true,
            label: 'Plugin name'|t('navie'),
            instructions: 'The public-facing name of the plugin'|t('navie'),
            id: 'pluginName',
            name: 'pluginName',
            value: settings.pluginName,
            errors: settings.getErrors('pluginName'),
        }) }}

        <div class="buttons">
            <input type="submit" class="btn submit" value="{{ 'Save'|t('app') }}">
        </div>
    </form>
{% endblock %}
